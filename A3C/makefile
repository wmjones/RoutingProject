mod=1
run=259200
MODEL_NAME='test'
path="/Users/wyatt/Documents/Github_Repositories/RoutingProject/A3C/"
train=0

short_test :
	python3 GA3C.py PATH=$(path) MODEL_SETTING=$(mod) AGENTS=8 NUM_OF_CUSTOMERS=19 MODEL_NAME=$(MODEL_NAME) TRAIN=$(train) TRAINING_MIN_BATCH_SIZE=10 TRAIN=1
test :
	python3 GA3C.py PATH=$(path) MODEL_SETTING=1 AGENTS=8 MODEL_NAME=$(MODEL_NAME) TRAIN=0 TRAINING_MIN_BATCH_SIZE=10
	python3 GA3C.py PATH=$(path) MODEL_SETTING=2 AGENTS=8 MODEL_NAME=$(MODEL_NAME) TRAIN=0 TRAINING_MIN_BATCH_SIZE=10
	python3 GA3C.py PATH=$(path) MODEL_SETTING=3 AGENTS=8 MODEL_NAME=$(MODEL_NAME) TRAIN=0 TRAINING_MIN_BATCH_SIZE=10
	python3 GA3C.py PATH=$(path) MODEL_SETTING=4 AGENTS=8 MODEL_NAME=$(MODEL_NAME) TRAIN=0 TRAINING_MIN_BATCH_SIZE=10
	python3 GA3C.py PATH=$(path) MODEL_SETTING=5 AGENTS=8 MODEL_NAME=$(MODEL_NAME) TRAIN=0 TRAINING_MIN_BATCH_SIZE=10
	python3 GA3C.py PATH=$(path) MODEL_SETTING=6 AGENTS=8 MODEL_NAME=$(MODEL_NAME) TRAIN=0 TRAINING_MIN_BATCH_SIZE=10
res :
	python3 GA3C.py MODEL_NAME=$(MODEL_NAME) RESTORE=1
tsp :
	mkdir -p figs
	mkdir -p ini_files
	mkdir -p logs
	mkdir -p checkpoint
	python3 GA3C.py MODEL_SETTING=$(MODEL_SETTING) TRAIN=1 RUN_TIME=$(run) AGENTS=8 MODEL_NAME=$(MODEL_NAME)
clean :
	rm -rf ./logs/*
	rm -rf ./checkpoint/*
	rm -rf ./ini_files/*
